{
  "name": "communication-server",
  "version": "6.4.1",
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9223 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "node dist/out-tsc/main.js",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/core": "^7.6.13",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/microservices": "^7.6.13",
    "@nestjs/platform-express": "^7.6.13",
    "@nestjs/swagger": "^4.7.15",
    "@nestjs/terminus": "^7.1.0",
    "@nestjs/typeorm": "^7.1.5",
    "aws-sdk": "^2.858.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "mongodb": "^3.6.4",
    "mqtt": "^4.2.6",
    "nodemailer": "^6.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.6",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-plugin-jsdoc": "^32.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "AGPLv3"
}
