{
  "name": "communication-server",
  "version": "4.7.0",
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9223 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "node dist/out-tsc/main.js",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/microservices": "^7.0.7",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/terminus": "^7.0.0",
    "@nestjs/typeorm": "^7.0.0",
    "aws-sdk": "^2.656.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "cron": "^1.8.2",
    "express": "^4.17.1",
    "fastify-formbody": "^3.1.0",
    "geteventstore-promise": "^3.2.1",
    "helmet": "^3.22.0",
    "joi": "^14.3.1",
    "mongodb": "^3.5.5",
    "node-eventstore-client": "^0.2.16",
    "nodemailer": "^6.4.6",
    "nodemailer-express-handlebars": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.2",
    "@nestjs/testing": "^7.0.7",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.0",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleDirectories": [
      "src/server",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "AGPLv3"
}
