{
  "name": "authorization-server",
  "version": "5.0.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9221 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.4.2",
    "@nestjs/core": "^7.4.2",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/microservices": "^7.4.2",
    "@nestjs/platform-express": "^7.4.2",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/websockets": "^7.4.2",
    "@webauthn/server": "^0.1.3",
    "agenda": "^3.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "hbs": "^4.1.1",
    "helmet": "^4.1.0",
    "i18n": "^0.11.1",
    "mongodb": "^3.6.0",
    "mongoose": "^5.10.0",
    "node-jose": "^1.1.4",
    "oauth2orize": "^1.11.0",
    "oauth2orize-openid": "^0.4.0",
    "oauth2orize-pkce": "^0.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "qrcode": "^1.4.4",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "saslprep": "^1.0.3",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/testing": "^7.4.2",
    "@types/agenda": "^2.0.9",
    "@types/connect-mongo": "^3.1.3",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.10",
    "@types/joi": "^14.3.4",
    "@types/mongodb": "^3.5.25",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/oauth": "^0.9.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.7.0",
    "eslint-plugin-jsdoc": "^30.2.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
