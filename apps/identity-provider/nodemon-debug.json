{
  "watch": [
    "src/server"
  ],
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "src/server/tsconfig.server.json"
  },
  "verbose": true,
  "ext": "ts",
  "ignore": [
    "src/server/**/*.spec.ts"
  ],
  "exec": "node --inspect=9224 -r ts-node/register -r tsconfig-paths/register src/server/main.ts"
}