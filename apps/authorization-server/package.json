{
  "name": "authorization-server",
  "version": "1.0.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start:client": "ng serve --proxy-config proxy.config.json --open",
    "start:client-dev": "ng build --watch=true",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "e2e": "ng e2e --configuration=ci",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier-check \"**/*.ts\"",
    "start:server": "nodemon",
    "start:hmr": "node dist/server",
    "prestart:prod": "rm -rf dist && ng build --prod --aot=false --build-optimizer=false && ng run authorization-server:server:production && tsc -p src/server/tsconfig.server.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register --project src/server/tsconfig.server.json src/server/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:client": "ng test --no-progress",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit",
    "build": "ng build",
    "build:client-and-server-bundles": "ng build --prod && ng run authorization-server:server:production",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "generate:prerender": "cd dist && node prerender",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/authorization-server && http-server",
    "serve:ssr": "node dist/server",
    "start:dev": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run start:client-dev\"",
    "add:user": "ts-node -r tsconfig-paths/register --project src/server/tsconfig.server.json src/server/cli-connector/create-user.ts",
    "add:oauth2-client": "ts-node -r tsconfig-paths/register --project src/server/tsconfig.server.json src/server/cli-connector/create-client.ts",
    "translate": "ng xi18n --output-path i18n && xliffmerge --profile xliffmerge.json en af am ar bg bn bo bs ca cs da da-DK de el en-GB en-US es es-AR es-BO es-CL es-CO es-DO es-EC es-GT es-MX es-NI es-PE et fa fi fr fr-CA gu he hi hr hu is it ja km kn ko ku lo lt lv mk ml mr ms my nl no pl ps pt pt-BR quc ro ru rw si sk sl sq sr sr-SP sv sw ta te th tr uk ur uz vi zh zh-TW"
  },
  "dependencies": {
    "@angular/animations": "^7.1.4",
    "@angular/cdk": "^7.2.0",
    "@angular/common": "^7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/core": "^7.1.4",
    "@angular/flex-layout": "^7.0.0-beta.22",
    "@angular/forms": "^7.1.4",
    "@angular/http": "^7.1.4",
    "@angular/material": "^7.2.0",
    "@angular/platform-browser": "^7.1.4",
    "@angular/platform-browser-dynamic": "^7.1.4",
    "@angular/platform-server": "^7.1.4",
    "@angular/router": "^7.1.4",
    "@nest-middlewares/passport": "^5.1.1",
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@nestjs/microservices": "^5.5.0",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/websockets": "^5.5.0",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "bull": "^3.5.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.6.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "express-session": "^1.15.6",
    "hammerjs": "^2.0.8",
    "hbs": "^4.0.1",
    "helmet": "^3.15.0",
    "i18n": "^0.8.3",
    "joi": "^14.3.0",
    "migrate-mongoose": "^3.2.2",
    "mongodb": "^3.1.10",
    "mongoose": "^5.4.0",
    "nestjs-ensureloggedin-guard": "^1.1.0",
    "node-jose": "^1.1.0",
    "oauth2orize": "^1.11.0",
    "oauth2orize-openid": "^0.4.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "pem-jwk": "^2.0.0",
    "point-of-view": "^2.1.0",
    "qrcode": "^1.3.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "rxjs-compat": "^6.3.3",
    "speakeasy": "^2.0.0",
    "uuid": "^3.3.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.11.4",
    "@angular/cli": "~7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/language-service": "^7.1.4",
    "@nestjs/testing": "^5.5.0",
    "@types/bull": "^3.5.1",
    "@types/express": "^4.16.0",
    "@types/jasmine": "~3.3.5",
    "@types/jasminewd2": "~2.0.6",
    "@types/jest": "23.3.10",
    "@types/joi": "^14.0.1",
    "@types/mongoose": "^5.3.5",
    "@types/node": "^10.12.18",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "codelyzer": "^4.5.0",
    "concurrently": "^4.1.0",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.2.0",
    "karma": "^3.1.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.3",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ngx-i18nsupport": "^0.17.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "prettier-check": "^2.0.0",
    "protractor": "^5.4.0",
    "supertest": "^3.0.0",
    "supertest-session": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.2",
    "ts-node": "7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.0",
    "typescript": "~3.1.6",
    "webpack": "4.28.2",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "src/server",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/server/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
