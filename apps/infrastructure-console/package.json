{
  "name": "infrastructure-console",
  "version": "6.8.1",
  "description": "Infrastructure Console",
  "author": "Castlecraft <support@castlecraft.in>",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "license": "AGPLv3",
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9225 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./tests/jest-e2e.json"
  },
  "private": true,
  "dependencies": {
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.8",
    "@nestjs/core": "^9.0.8",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/microservices": "^9.0.8",
    "@nestjs/platform-express": "^9.0.8",
    "@nestjs/swagger": "^6.0.5",
    "@nestjs/terminus": "^9.1.0",
    "@nestjs/typeorm": "^9.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cron": "^2.1.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "joi": "^17.6.0",
    "mongodb": "^4.8.1",
    "mqtt": "^4.3.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.8",
    "@types/express": "^4.17.12",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-plugin-jsdoc": "^39.3.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
