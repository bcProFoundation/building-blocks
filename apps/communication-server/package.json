{
  "name": "communication-server",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier-check \"**/*.ts\"",
    "ng:start": "ng serve",
    "e2e": "ng e2e --configuration=ci",
    "build": "ng build",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "start:server": "nodemon",
    "start:client": "ng serve --proxy-config proxy.config.json",
    "start:client-dev": "ng build --watch=true",
    "start:dev": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
    "prestart:prod": "rm -rf dist && ng build --prod && tsc -p src/server/tsconfig.server.json",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles",
    "test:client": "ng test --watch=false --no-progress",
    "webpack": "webpack --config webpack.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.1.0",
    "@angular/cdk": "^7.1.0",
    "@angular/common": "^7.1.0",
    "@angular/compiler": "^7.1.0",
    "@angular/core": "^7.1.0",
    "@angular/flex-layout": "^7.0.0-beta.19",
    "@angular/forms": "^7.1.0",
    "@angular/http": "^7.1.0",
    "@angular/material": "^7.1.0",
    "@angular/platform-browser": "^7.1.0",
    "@angular/platform-browser-dynamic": "^7.1.0",
    "@angular/router": "^7.1.0",
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "amqp-connection-manager": "^2.3.0",
    "amqplib": "^0.5.2",
    "angular-oauth2-oidc": "^5.0.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "core-js": "^2.5.4",
    "craft-account-manager": "^1.0.0",
    "fastify-formbody": "^2.0.2",
    "hammerjs": "^2.0.8",
    "joi": "^14.1.1",
    "mongodb": "~3.1.10",
    "nodemailer": "^4.7.0",
    "nodemailer-express-handlebars": "^3.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.9",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.6",
    "@angular/cli": "~7.0.6",
    "@angular/compiler-cli": "^7.1.0",
    "@angular/language-service": "^7.1.0",
    "@nestjs/testing": "^5.4.0",
    "@types/amqplib": "^0.5.9",
    "@types/express": "^4.0.39",
    "@types/jasmine": "~3.3.0",
    "@types/jasminewd2": "~2.0.6",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/supertest": "^2.0.6",
    "codelyzer": "~4.5.0",
    "concurrently": "^4.1.0",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.6.0",
    "karma": "~3.1.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.4",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "prettier-check": "^2.0.0",
    "protractor": "~5.4.1",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleDirectories": [
      "src/server",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/server/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "AGPLv3"
}
