{
  "name": "communication-server",
  "version": "2.0.1",
  "scripts": {
    "lint": "tslint -c tslint.json './src/**/*.ts' './tests/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier-check \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:server": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "node dist/out-tsc/main.js",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^6.4.1",
    "@nestjs/core": "^6.4.1",
    "@nestjs/cqrs": "^6.0.0",
    "@nestjs/microservices": "^6.4.1",
    "@nestjs/platform-express": "^6.4.1",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "aws-sdk": "^2.488.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "cron": "^1.7.1",
    "express": "^4.17.1",
    "fastify-formbody": "^3.1.0",
    "joi": "^14.3.1",
    "mongodb": "^3.2.7",
    "nodemailer": "^6.2.1",
    "nodemailer-express-handlebars": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.4.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@types/supertest": "^2.0.8",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "jest": {
    "moduleDirectories": [
      "src/server",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "AGPLv3"
}
