{
  "name": "communication-server",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "format": "prettier --write \"**/*.ts\"",
    "ng:start": "ng serve",
    "e2e": "echo ng e2e --port 49151 --configuration=ci",
    "build": "ng build",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'",
    "start:server": "nodemon",
    "start:client": "ng serve --proxy-config proxy.config.json",
    "start:dev": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles",
    "test:client": "echo ng test --watch=false --no-progress",
    "webpack": "webpack --config webpack.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "@nestjs/common": "^5.3.5",
    "@nestjs/core": "^5.3.4",
    "@nestjs/microservices": "^5.3.5",
    "@nestjs/typeorm": "^5.1.0",
    "amqplib": "^0.5.2",
    "angular-oauth2-oidc": "^4.0.2",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "core-js": "^2.5.4",
    "craft-account-manager": "^1.0.0",
    "fastify-formbody": "^2.0.0",
    "joi": "^13.6.0",
    "mongodb": "~3.0.11",
    "nodemailer": "^4.6.8",
    "nodemailer-express-handlebars": "^3.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.2",
    "typeorm": "^0.2.7",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.4",
    "@angular/cli": "~6.1.4",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@nestjs/testing": "^5.3.1",
    "@types/amqplib": "^0.5.8",
    "@types/express": "^4.0.39",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.4",
    "codelyzer": "~4.4.4",
    "concurrently": "^4.0.1",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.5.0",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.3.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "protractor": "~5.4.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.1.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.1.1",
    "tslint": "~5.11.0",
    "typescript": "~2.7.2",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleDirectories": [
      "src/server",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/server/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "MIT"
}
