{
  "name": "infrastructure-console",
  "version": "6.0.0",
  "description": "Infrastructure Console",
  "author": "Castlecraft <support@castlecraft.in>",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "license": "AGPLv3",
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9225 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./tests/jest-e2e.json"
  },
  "private": true,
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/microservices": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/terminus": "^7.0.1",
    "@nestjs/typeorm": "^7.1.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "mongodb": "^3.6.2",
    "mqtt": "^4.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.26",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/testing": "^7.4.4",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.10.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.9.0",
    "eslint-plugin-jsdoc": "^30.4.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
