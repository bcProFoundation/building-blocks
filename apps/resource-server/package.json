{
  "name": "resource-server",
  "version": "1.0.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Resource Server",
  "author": "CEPL",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "export NODE_ENV=development && nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "export NODE_ENV=production && node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "export NODE_ENV=test && jest",
    "test:e2e": "export NODE_ENV=test && jest --config ./e2e/jest-e2e.json",
    "test:cov": "jest --coverage",
    "webpack": "webpack --config webpack.config.js",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "@nest-middlewares/passport": "^5.0.2",
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "fastify-formbody": "^2.0.0",
    "mongoose": "^5.1.7",
    "nestjs-ensureloggedin-guard": "^1.0.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2": "^1.4.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "jest": "^23.2.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
