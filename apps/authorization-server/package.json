{
  "name": "authorization-server",
  "version": "6.8.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9221 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.3",
    "@nestjs/cqrs": "^9.0.1",
    "@nestjs/microservices": "^9.0.3",
    "@nestjs/platform-express": "^9.0.3",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/terminus": "^9.0.0",
    "@simplewebauthn/server": "^5.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "hbs": "^4.2.0",
    "helmet": "^5.1.0",
    "i18n": "^0.15.0",
    "joi": "^17.6.0",
    "mongodb": "^4.8.0",
    "mongoose": "^6.4.4",
    "mqtt": "^4.3.7",
    "node-cron": "^3.0.1",
    "node-jose": "^2.1.1",
    "oauth2orize": "^1.11.1",
    "oauth2orize-openid": "^0.4.1",
    "oauth2orize-pkce": "^0.1.2",
    "otplib": "^12.0.1",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.6.0",
    "qrcode": "^1.5.1",
    "rate-limit-mongo": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.3",
    "@simplewebauthn/typescript-types": "^5.3.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.5",
    "@types/passport": "^1.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
