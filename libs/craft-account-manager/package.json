{
  "name": "craft-account-manager",
  "version": "1.0.0",
  "description": "Account Manager for Resource Server",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "webpack || echo not ok",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "prepare": "npm run build && npm test",
    "release": "standard-version && npm pack",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/node": "^8.0.24",
    "browserify": "^14.4.0",
    "delete-empty": "^1.0.1",
    "dts-bundle": "^0.7.3",
    "jest": "^23.2.0",
    "prettier": "^1.11.1",
    "standard-version": "^4.2.0",
    "ts-jest": "^23.0.0",
    "ts-loader": "^2.3.3",
    "tslint": "^5.6.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.9.2",
    "webpack": "3.5.5",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@nestjs/common": "^5.1.0",
    "rxjs": "^6.2.2"
  },
  "jest": {
    "testURL": "http://localhost",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "./__tests__/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "author": "CEPL",
  "license": "MIT"
}
