{
  "name": "authorization-server",
  "version": "4.1.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "tslint -c tslint.json './src/**/*.ts' './tests/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier-check \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:server": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.1.2",
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/cqrs": "^6.0.1",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/terminus": "^6.5.1",
    "@nestjs/websockets": "^6.5.3",
    "bull": "^3.10.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.16.2",
    "geteventstore-promise": "^3.1.2",
    "hbs": "^4.0.4",
    "helmet": "^3.20.0",
    "i18n": "^0.8.3",
    "joi": "^14.3.1",
    "mongodb": "^3.3.1",
    "mongoose": "^5.6.10",
    "node-jose": "^1.1.3",
    "oauth2orize": "^1.11.0",
    "oauth2orize-openid": "^0.4.0",
    "oauth2orize-pkce": "^0.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "qrcode": "^1.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "saslprep": "^1.0.3",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/bull": "^3.10.2",
    "@types/connect-mongo": "0.0.43",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/joi": "^14.3.3",
    "@types/mongoose": "^5.5.13",
    "@types/node": "^12.7.2",
    "@types/oauth": "^0.9.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
