{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noUnusedLocals":true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
