{
  "name": "authorization-server",
  "version": "6.7.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9221 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/cqrs": "^8.0.5",
    "@nestjs/microservices": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/terminus": "^8.0.6",
    "@simplewebauthn/server": "^5.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "express-session": "^1.17.3",
    "hbs": "^4.2.0",
    "helmet": "^5.1.0",
    "i18n": "^0.15.0",
    "joi": "^17.6.0",
    "mongodb": "^4.7.0",
    "mongoose": "^6.4.0",
    "mqtt": "^4.3.7",
    "node-cron": "^3.0.1",
    "node-jose": "^2.1.1",
    "oauth2orize": "^1.11.1",
    "oauth2orize-openid": "^0.4.1",
    "oauth2orize-pkce": "^0.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.5.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "qrcode": "^1.5.0",
    "rate-limit-mongo": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "saslprep": "^1.0.3",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.6",
    "@nestjs/testing": "^8.4.7",
    "@simplewebauthn/typescript-types": "^5.2.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
