{
  "name": "authorization-server",
  "version": "2.0.1",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "tslint -c tslint.json './src/**/*.ts' './tests/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier-check \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:server": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.5",
    "@nestjs/core": "^6.0.5",
    "@nestjs/cqrs": "^6.0.0",
    "@nestjs/microservices": "^6.0.5",
    "@nestjs/mongoose": "^6.0.0",
    "@nestjs/platform-express": "^6.0.5",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/websockets": "^6.0.5",
    "bull": "^3.7.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.4.0",
    "express-session": "^1.15.6",
    "hbs": "^4.0.3",
    "helmet": "^3.16.0",
    "i18n": "^0.8.3",
    "joi": "^14.3.1",
    "mongodb": "^3.2.3",
    "mongoose": "^5.4.22",
    "node-jose": "^1.1.3",
    "oauth2orize": "^1.11.0",
    "oauth2orize-openid": "^0.4.0",
    "oauth2orize-pkce": "^0.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "qrcode": "^1.3.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.5",
    "@types/bull": "^3.5.11",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.2",
    "@types/mongoose": "^5.3.24",
    "@types/node": "^11.13.0",
    "@types/oauth": "^0.9.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "jest": "^24.7.1",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-check": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
