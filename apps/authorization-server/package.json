{
  "name": "authorization-server",
  "version": "4.5.8",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Authorization Server",
  "author": "CEPL",
  "license": "AGPLv3",
  "private": true,
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier-check \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9221 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "export NODE_ENV=production && node dist/out-tsc/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test:server": "export NODE_ENV=test && jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles --forceExit --verbose"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^6.11.7",
    "@nestjs/core": "^6.11.7",
    "@nestjs/cqrs": "^6.1.0",
    "@nestjs/microservices": "^6.11.7",
    "@nestjs/platform-express": "^6.11.7",
    "@nestjs/swagger": "^4.2.8",
    "@nestjs/terminus": "^6.5.6",
    "@nestjs/websockets": "^6.11.7",
    "@webauthn/server": "^0.1.3",
    "agenda": "^3.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.1",
    "express-session": "^1.17.0",
    "geteventstore-promise": "^3.2.0",
    "hbs": "^4.1.0",
    "helmet": "^3.21.2",
    "i18n": "^0.8.5",
    "joi": "^14.3.1",
    "mongodb": "^3.5.3",
    "mongoose": "^5.9.1",
    "node-jose": "^1.1.3",
    "oauth2orize": "^1.11.0",
    "oauth2orize-openid": "^0.4.0",
    "oauth2orize-pkce": "^0.1.2",
    "owasp-password-strength-test": "^1.3.0",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "passport-oauth2-code": "^0.1.6",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "saslprep": "^1.0.3",
    "speakeasy": "^2.0.0",
    "swagger-ui-express": "^4.1.3",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/testing": "^6.11.7",
    "@types/agenda": "^2.0.6",
    "@types/connect-mongo": "^3.1.3",
    "@types/express": "^4.17.2",
    "@types/express-session": "^1.15.16",
    "@types/jest": "^25.1.2",
    "@types/joi": "^14.3.4",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.1",
    "@types/oauth": "^0.9.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "prettier-check": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
