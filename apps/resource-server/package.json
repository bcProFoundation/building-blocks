{
  "name": "resource-server",
  "version": "1.0.0",
  "repository": "https://gitlab.com/castlecraft/building-blocks",
  "description": "Resource Server",
  "author": "CEPL",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start:server": "nodemon",
    "start:client": "quasar dev",
    "start:dev": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "export NODE_ENV=production && node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "export NODE_ENV=test && jest",
    "test:e2e": "export NODE_ENV=test && jest --config ./e2e/jest-e2e.json",
    "test:cov": "jest --coverage",
    "webpack": "webpack --config webpack.config.js",
    "lint": "./node_modules/.bin/tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "@nest-middlewares/passport": "^5.0.2",
    "@nestjs/common": "^5.1.0",
    "@nestjs/core": "^5.1.0",
    "@nestjs/microservices": "^5.1.0",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/testing": "^5.1.0",
    "@nestjs/typeorm": "^5.0.2",
    "@nestjs/websockets": "^5.1.0",
    "axios": "^0.18.0",
    "fastify-formbody": "^2.0.0",
    "mongoose": "^5.1.7",
    "nestjs-auth-guard": "^1.0.0",
    "nestjs-ensureloggedin-guard": "^1.0.0",
    "nestjs-passport-cookie-serializer": "^1.0.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2": "^1.4.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7",
    "typescript": "^2.9.2",
    "vue-i18n": "^7.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "23.1.4",
    "@types/node": "10.5.2",
    "@types/supertest": "^2.0.4",
    "babel-eslint": "^8.2.1",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "jest": "^23.2.0",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "quasar-cli": "^0.16.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.1.0",
    "ts-node": "7.0.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.10.0",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8",
    "webpack-node-externals": "^1.6.0"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/server/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  }
}
