{
  "name": "communication-server",
  "version": "6.5.7",
  "scripts": {
    "lint": "eslint '{tests,src}/**/*.ts'",
    "format": "prettier --write \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "format:check": "prettier -c \"./src/**/*.ts\" \"./tests/**/*.ts\"",
    "start:debug": "nest start -d 9223 -w -p src/tsconfig.build.json",
    "build": "rm -rf dist && tsc -p src/tsconfig.build.json",
    "start:prod": "node dist/out-tsc/main.js",
    "test:server": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "export NODE_ENV=test-e2e && jest --config ./tests/jest-e2e.json --detectOpenHandles"
  },
  "private": true,
  "dependencies": {
    "@nestjs/axios": "^0.0.1",
    "@nestjs/common": "^8.0.5",
    "@nestjs/core": "^8.0.5",
    "@nestjs/cqrs": "^8.0.0",
    "@nestjs/microservices": "^8.0.5",
    "@nestjs/platform-express": "^8.0.5",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/terminus": "^8.0.0-next.0",
    "@nestjs/typeorm": "^8.0.1",
    "aws-sdk": "^2.958.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.1",
    "mongodb": "^3.6.9",
    "mqtt": "^4.2.6",
    "nodemailer": "^6.6.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "saslprep": "^1.0.3",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.36",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.0",
    "@nestjs/testing": "^8.0.5",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.4.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-plugin-jsdoc": "^36.0.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "jest": {
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx,ts}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ]
  },
  "description": "Email, SMS and Webhooks API",
  "author": "CEPL",
  "repository": "https://gitlab.com/castlecraft/building-blocks.git",
  "license": "AGPLv3"
}
